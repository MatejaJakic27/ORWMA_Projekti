<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="350dp"
    android:background="@color/eerieBlack">

    <ImageView
        android:id="@+id/firstAvatar"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/reading_dog" />

    <ImageView
        android:id="@+id/secondAvatar"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/firstAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/bookworm_imp3" />

    <ImageView
        android:id="@+id/thirdAvatar"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstAvatar"
        app:srcCompat="@mipmap/reading_cat" />

    <ImageView
        android:id="@+id/fourthAvatar"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toEndOf="@+id/thirdAvatar"
        app:layout_constraintTop_toBottomOf="@+id/secondAvatar"
        app:srcCompat="@mipmap/reading_owl_imp" />

    <TextView
        android:id="@+id/chooseAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="@string/chooseAvatar"
        android:textColor="@color/palePink"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>