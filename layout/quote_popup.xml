<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="270dp"
    android:background="@color/orhidCrayola">

    <EditText
        android:id="@+id/popupTitleAndAuthor"
        android:layout_width="220dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:textAlignment="center"
        android:hint="@string/enterTitleAndAuthor"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/popupQuote"
        android:layout_width="220dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:hint="@string/enterQuotationItself"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popupTitleAndAuthor" />

    <Button
        android:id="@+id/popUpDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/lightCoral"
        android:text="@string/addingQuotePopUp"
        android:textColor="@color/palePink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popupQuote" />

</androidx.constraintlayout.widget.ConstraintLayout>